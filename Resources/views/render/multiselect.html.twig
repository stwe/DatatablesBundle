{% import _self as forms %}

{% macro attributes(attributes) %}
    {% for key, value in attributes %}
        {{ key }}="{{ value }}"
    {% endfor %}
{% endmacro %}

{% if render_if_cbox is same as(true) %}
    {{ start_html|raw }}
    <input type="checkbox" {{ forms.attributes(attributes) }} value="{{ value }}" />
    {{ end_html|raw }}
{% endif %}
