{
    {% block common %}
        "className": "{{ column.className }}",
        "contentPadding": "{{ column.contentPadding }}",
        "defaultContent": "{{ column.defaultContent }}",
        "name": "{{ column.name }}",
        {% if column.orderable %}
            "orderable": true,
        {% else %}
            "orderable": false,
        {% endif %}
        {% if column.searchable %}
            "searchable": true,
        {% else %}
            "searchable": false,
        {% endif %}
        "title": "{{ column.title }}",
        {% if column.type %}
            "type": "{{ column.type }}",
        {% endif %}
        {% if column.visible %}
            "visible": true,
        {% else %}
            "visible": false,
        {% endif %}
        "width": "{{ column.width }}",
    {% endblock %}

    {% block data %}
        "data": "{{ column.data }}",
        {% if column.default %}
            "render": function(data) {
                if ("" == data) {
                    return "{{ column.default }}";
                } else {
                    return data;
                }
            },
        {% endif %}
    {% endblock %}
},
