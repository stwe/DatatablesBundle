var search = $.fn.DataTable.util.throttle(
        function (event) {
            if (event.type == "keyup") {
                if (
                        event.keyCode == 37 ||
                        event.keyCode == 38 ||
                        event.keyCode == 39 ||
                        event.keyCode == 40 ||
                        event.keyCode == 16 ||
                        event.keyCode == 17 ||
                        event.keyCode == 18
                )
                    return;
            }

            oTable
                    .column($(event.currentTarget).data("search-column-index"))
                    .search(this.value)
                    .draw();
        },
        options.searchDelay
);

$(selector).find("tr input.sg-datatables-individual-filtering").on("keyup change", search);
