{% if column.filter.cancelButton is same as(true) %}
    document.addEventListener("DOMContentLoaded", function () {
        <script type="text/javascript">
            $("#{{ cancel_button_id_selector }}").click(function() {
                if ('' != $("#{{ filter_id_selector }}").val()) {
                    $("#{{ filter_id_selector }}")
                        .val('')
                        .change();
                }
            });
        </script>
    }, false);
{% endif %}
